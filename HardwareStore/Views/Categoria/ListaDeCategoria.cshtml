@model IEnumerable<HardwareStore.Models.Categoria>

@{
    ViewData["Title"] = "ListaDeCategoria";
}

<h1 class="categorialista">Lista de todas categorias atualmente</h1>
<div class="telacategoria">
    

    <p>
        <a asp-action="Create" class="adicionarnovo">+ Adicionar nova categoria</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>Operações</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoriaId">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.CategoriaId">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.CategoriaId">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
