@model IEnumerable<HardwareStore.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1 class="categorias">Categorias</h1>

<p>
    <a asp-action="Create" class="adicionarnovo">+Criar Nova Categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoriaId">Editar</a>
                <a asp-action="Details" asp-route-id="@item.CategoriaId">Detalhes</a> 
                <a asp-action="Delete" asp-route-id="@item.CategoriaId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
